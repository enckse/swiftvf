{
  "entropy": false,
  "boot": {
    "linux": {
      "kernel": "vmlinuz-lts",
      "initrd": "initramfs-lts",
      "cmdline": "myargs"
    }
  },
  "resources": {
      "cpus": 2,
      "memory": 8192
  },
  "disks": [
    { 
      "path": "build/alpine-aarch64.iso",
      "readonly": true, 
      "mode": "usb"
    },
    { 
      "path": "build/apkovl.img",
      "mode": "block"
    },
    { 
      "path": "build/data.img",
      "readonly": false,
      "mode": "block"
    }
  ],
  "env": {
    "$HOME/": "~/"
  },
  "shares": {
    "downloads": {},
    "documents": {
       "path": "$HOME/Documents",
       "readonly": true 
    },
    "other": {
       "path": "~/Documents",
       "readonly": true 
    }
  },
  "networks": [
    {
      "mac": "12:34:56:78:90:ab",
      "mode": "nat"
    },
    {
      "mode": "nat"
    }
  ]
}
